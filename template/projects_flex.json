{
    "type": "bubble",
    "direction": "ltr",
    "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
        {
        "type": "box",
        "layout": "vertical",
        "spacing": "md",
        "contents": [
            {
            "type": "text",
            "text": "{{project_name}}",
            "size": "lg",
            "align": "center",
            "weight": "bold"
            }
        ]
        }
    ]
    },
    "footer": {
    "type": "box",
    "layout": "vertical",
    "contents": [
        {
        "type": "separator",
        "color": "#A8A1A1"
        },
        {
        "type": "button",
        "action": {
            "type": "message",
            "label": "加入",
            "text": "我要加入{{project_name}}，嗷！"
        },
        "height": "sm"
        },
        {
            "type": "button",
            "action": {
              "type": "message",
              "label": "退出",
              "text": "我要退出{{project_name}}，嗚嗚..."
            },
            "color": "#B6B0B0",
            "height": "sm",
            "style": "link"
        }
    ]
    }
}
